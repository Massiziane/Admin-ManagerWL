      fx:controller="org.example.workoutlog.controllers.AdminHelpModalController"
      alignment="CENTER" spacing="15" style="-fx-background-color: #f0f0f0; -fx-padding: 20; -fx-border-color: #444; -fx-border-width: 2; -fx-border-radius: 8; -fx-background-radius: 8;">

    <Label text="Admin Guidance" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <Label text="Whenever you are prompted to enter any ID, always make sure that the ID is valid." 
           wrapText="true" style="-fx-font-size: 14px;" />

    <Label text="Whenever you are prompted to enter a user ID, always use the admin ID (20) for traceability purposes." 
           wrapText="true" style="-fx-font-size: 14px;" />

    <Button text="Close" fx:id="btnClose" />
