<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20"
      stylesheets="@../../css/exercise-form.css"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.workoutlog.controllers.ExerciseFormController">

    <Label text="Create / Edit Exercise" styleClass="form-title"/>

    <GridPane hgap="15" vgap="15">

        <columnConstraints>
            <ColumnConstraints halignment="RIGHT"/>
            <ColumnConstraints halignment="LEFT"/>
        </columnConstraints>

        <Label text="Exercise Name:" GridPane.rowIndex="0"/>
        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Notes:" GridPane.rowIndex="1"/>
        <TextArea fx:id="notesArea"
                  prefRowCount="3"
                  GridPane.columnIndex="1"
                  GridPane.rowIndex="1"/>

        <Label text="Program:" GridPane.rowIndex="2"/>
        <ComboBox fx:id="programCombo"
                  GridPane.columnIndex="1"
                  GridPane.rowIndex="2"/>

        <Label text="Category:" GridPane.rowIndex="3"/>
        <ComboBox fx:id="categoryCombo"
                  GridPane.columnIndex="1"
                  GridPane.rowIndex="3"/>

    </GridPane>

    <HBox alignment="CENTER" spacing="15">
        <Button fx:id="saveBtn" styleClass="primary-btn" text="Save"/>
        <Button fx:id="cancelBtn" styleClass="secondary-btn" text="Cancel"/>
    </HBox>

</VBox>

