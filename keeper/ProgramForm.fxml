<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="327.0" prefWidth="672.0" spacing="20" stylesheets="@../../css/program-form.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.workoutlog.controllers.ProgramFormController">

    <Label prefHeight="64.0" prefWidth="225.0" styleClass="form-title" text="Create / Edit Program" />

    <GridPane alignment="CENTER" hgap="15" vgap="15">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" />
            <ColumnConstraints halignment="LEFT" />
        </columnConstraints>

        <Label text="Program Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="nameField" promptText="e.g. 8-Week Hypertrophy" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextArea fx:id="descArea" prefRowCount="4" promptText="Program goal, focus, duration..." GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Assigned User:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <ComboBox fx:id="userCombo" promptText="Select User" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>

    </GridPane>

    <HBox alignment="CENTER" prefHeight="90.0" prefWidth="533.0" spacing="15">
        <Button fx:id="saveBtn" styleClass="primary-btn" text="Save" />
        <Button fx:id="cancelBtn" styleClass="secondary-btn" text="Cancel" />
    </HBox>

</VBox>
