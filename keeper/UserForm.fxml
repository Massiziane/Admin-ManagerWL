<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER"
      spacing="20"
      stylesheets="@../../css/user-form.css"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.workoutlog.controllers.UserFormController">

    <Label text="Create / Edit User" styleClass="form-title"/>

    <GridPane hgap="15" vgap="15">

        <columnConstraints>
            <ColumnConstraints halignment="RIGHT"/>
            <ColumnConstraints halignment="LEFT"/>
        </columnConstraints>

        <Label text="First Name:" GridPane.rowIndex="0"/>
        <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Last Name:" GridPane.rowIndex="1"/>
        <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Username:" GridPane.rowIndex="2"/>
        <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Email:" GridPane.rowIndex="3"/>
        <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="Password:" GridPane.rowIndex="4"/>
        <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

        <Label text="Role:" GridPane.rowIndex="5"/>
        <ComboBox fx:id="roleCombo" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

        <Label text="Active:" GridPane.rowIndex="6"/>
        <CheckBox fx:id="activeCheck" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

    </GridPane>

    <HBox alignment="CENTER" spacing="15">
        <Button fx:id="saveBtn" styleClass="primary-btn" text="Save"/>
        <Button fx:id="cancelBtn" styleClass="secondary-btn" text="Cancel"/>
    </HBox>

</VBox>
