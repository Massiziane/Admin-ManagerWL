<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20"
      stylesheets="@../../css/category-form.css"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.workoutlog.controllers.CategoryFormController">

    <Label text="Create / Edit Category" styleClass="form-title"/>

    <GridPane hgap="15" vgap="15">

        <columnConstraints>
            <ColumnConstraints halignment="RIGHT"/>
            <ColumnConstraints halignment="LEFT"/>
        </columnConstraints>

        <Label text="Name:" GridPane.rowIndex="0"/>
        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Description:" GridPane.rowIndex="1"/>
        <TextArea fx:id="descArea" prefRowCount="3"
                  GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Muscles (comma separated):" GridPane.rowIndex="2"/>
        <TextField fx:id="musclesField"
                   promptText="Chest, Triceps, Back"
                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    </GridPane>

    <HBox alignment="CENTER" spacing="15">
        <Button fx:id="saveBtn" styleClass="primary-btn" text="Save"/>
        <Button fx:id="cancelBtn" styleClass="secondary-btn" text="Cancel"/>
    </HBox>

</VBox>

